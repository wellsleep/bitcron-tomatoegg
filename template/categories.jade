extends base
block title
	title= "分类 - " + site.title

block header
	.no-cover
	
block content

	main.content(role='main')
	    article.post.archive
			header.post-header
	            h1.post-title= '一亩三分地'
			section.post-content
				.pure-g#categories
					for category in posts.categories
						.pure-u-1.pure-u-sm-1-2.pure-u-lg-1-3.pure-u-lg-1-4: .category
							a(href=category.url)
								h3= category.metadata.ctitle
								span {{ category.posts_count }} posts


				